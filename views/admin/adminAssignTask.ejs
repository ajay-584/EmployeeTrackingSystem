<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div>
    <div>
      <div>
        <h1>Admin Dashboard</h1>
      </div>
      <%- include("adminLeftNav") %>

      <div class="rightcontainer">
        <h2>Assign Task</h2>
        <!-- printing message as data has been inseted -->
        <p style="color: red;"><%= msg %></p>
        <div class="frm">
          <form action="" method="post" enctype="multipart/form-data">
            Task Name :
            <input type="text" name="task_name" placeholder="Enter task name" required><br><br>
            Task Description :
            <textarea name="task_desc" rows="2" cols="30" required></textarea><br><br>
            Release :
            <select name="task_release" required>
              <option value="">Please Choose...</option>
              <% rdataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.releaseName %></option>
                <% }) %>
            </select>
            Sprint :
            <select name="task_sprint" required>
              <option value="">Please Choose...</option>
              <% sdataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.sprintName %></option>
                <% }) %>
            </select><br><br>
            Task Type :
            <select name="task_type" required>
              <option value="">Please Choose...</option>
              <% tdataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.taskName %></option>
                <% }) %>
            </select><br><br>
            Assign By :
            <select name="task_assgin_by" required>
              <option value="">Please Choose...</option>
              <% edataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.name %></option>
                <% }) %>
            </select>
            Assign To :
            <select name="task_assgin_to" required>
              <option value="">Please Choose...</option>
              <% edataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.name %></option>
                <% }) %>
            </select><br><br>
            Start Date :<input type="date" name="start_date" required> 
            Due Date : <input type="date" name="due_date" required><br><br>
            Task Hours Needed :
            <select name="task_hour" required>
              <option value="">Please Choose...</option>
              <option>01</option>
              <option>02</option>
              <option>03</option>
              <option>04</option>
              <option>05</option>
              <option>06</option>
              <option>07</option>
              <option>08</option>
              <option>09</option>
              <option>10</option>
            </select><br><br>
            Associated Task Id :
            <select name="associated_task_id" required>
              <option value="">Please Choose...</option>
              <option>Not Specified</option>
            </select><br><br>
            Reviewer :
            <select name="task_reviewer" required>
              <option value="">Please Choose...</option>
              <% edataArray.forEach(function(ele) { %>
                <option value="<%= ele._id %>"><%= ele.name %></option>
                <% }) %>
            </select><br><br>
            Task Note :
            <textarea name="task_notes" rows="2" cols="30" required></textarea><br><br>
            Any File :
            <input type="file" name="file" placeholder="Upload files" ><br><br>
            <input class="sub" type="submit" name="submit" value="Assign Task">
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>