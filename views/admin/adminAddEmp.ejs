<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div>
    <div>
      <div>
        <h1>Admin Dashboard</h1>
      </div>
      <%- include("adminLeftNav") %>
      <div class="rightcontainer">
        <h2>Add Employee</h2>
        <!-- printing message as data has been inseted -->
        <p style="color: red;"><%= msg %></p>
        <div class="frm">
          <form action="" method="post">
             Name: <input type="text" name="emp_name" placeholder="Enter employee name" required><br><br>
             Phone : <input type="number" name="emp_phone" placeholder="Enter employee phone no"
              required><br><br>
             Email : <input type="email" name="emp_email" placeholder="Enter email address" required><br><br>
            Gender : <select name="emp_gender" id="" required>
              <option value="">Please Choose...</option>
              <option value="Male">Male</option>
              <option value="Female">Female</option>
              <option value="Others">Others</option>
            </select><br><br>
            Designation : <select name="emp_desi" required>
              <option value="">Please Choose...</option>
              <% desigArray.forEach(function(ele) { %>
              <option value="<%= ele._id %>"><%= ele.designationName %></option>
              <% }) %>
            </select><br><br>
            Primary Skills: <select name="emp_prim_skill" required>
              <option value="">Please Choose...</option>
              <% empSkillArray.forEach(function(ele) { %>
              <option value="<%= ele._id %>"><%= ele.skillName %></option>
              <% }) %>
            </select><br><br>
            Secondary Skills: <select name="emp_sec_skill" required>
              <option value="">Please Choose...</option>
              <% empSkillArray.forEach(function(ele) { %>
              <option value="<%= ele._id %>"><%= ele.skillName %></option>
               <% }) %>
            </select><br><br>
            Joining Date: <input type="date" name="emp_join_date" required><br><br>
            Expected Work hour/Day:<select name="emp_work_hour" required>
              <option value="">Please Choose...</option>
              <option>01</option>
              <option>02</option>
              <option>03</option>
              <option>04</option>
              <option>05</option>
              <option>06</option>
              <option>07</option>
              <option>08</option>
              <option>09</option>
              <option>10</option>
            </select><br><br>
            <input class="sub" type="submit" value="Add Employee">
          </form>
        </div>
      </div>
    </div>
  </div>
</body>

</html>