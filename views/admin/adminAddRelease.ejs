<!DOCTYPE html>
<html>

<head>
  <title><%= title %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>

<body>
  <div>
    <div>
      <div>
        <h1>Admin Dashboard</h1>
      </div>
      <%- include('adminLeftNav') %>

      <div class="rightcontainer">
        <h2>Add Task Release</h2>
        <p style="color: red;"><%= msg %></p>
        <div class="frm">
          <form action="" method="post">
            Release Name : <input type="text" name="task_release_name" placeholder="Enter task name" required><br><br>
            <input class="sub" type="submit" name="submit" value="Add Release">
          </form>
        </div>
        <h2>List of Release</h2>
        <div>
          <table>
            <tr>
              <th>Serial No</th>
              <th>Release Name</th>
            </tr>
            <% if(releaseArray){ %>
                <% var x=0 %>
            <% releaseArray.forEach(function(ele){ %>
            <tr>
              <td><%= x=x+1 %></td>
              <td><%= ele.releaseName %></td>
            </tr>
            <% }) }else{ %>
            <p style="color: red;">Please refreash</p>
            <% } %>
          </table>
        </div>
      </div>
    </div>
  </div>
</body>

</html>